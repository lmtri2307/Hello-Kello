pipeline {
    agent any

    tools {
        nodejs '20.13.1' // Use the configured Node.js version
    }

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                   dir('Hello'){
                    sh 'npm install'
                   }
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                  dir('Hello'){
                    sh 'npm test'
                  }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Define deployment steps
                    sshagent(['topdevs_clone']) {
                        sh """
                        ssh azureuser@4.246.202.165 'mkdir -p /Hello'
                        rsync -avz --delete --exclude="node_modules" ./ azureuser@4.246.202.165:/jenkin/Hello
                        ssh azureuser@4.246.202.165 'cd /jenkin/Hello && npm install && npm start'
                        """
                    }
                }
            }
        }
    }
}
