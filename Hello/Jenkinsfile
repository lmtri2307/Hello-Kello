pipeline {
    agent any

    tools {
        nodejs '20.13.1' // Use the configured Node.js version
    }

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    // Run npm install to install dependencies
                    sh 'npm install'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Run npm test to execute tests
                    sh 'npm test'
                }
            }
        }
    }
}
